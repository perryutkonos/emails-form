.emails-container {
  font-family: 'Open Sans', sans-serif;
  font-style: normal;
  font-weight: normal;
  font-size: 14px;
  line-height: 24px;
  background: var(--background-color);
  box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
  border-radius: 8px;

  &__top {
    background: var(--gray-color);
    padding: 32px 50px 24px;
  }
}

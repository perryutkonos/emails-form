.emails-item {
  background: var(--blue-light);
  border-radius: 100px;
  font-size: 14px;
  line-height: 24px;
  height: 24px;
  margin: 4px;
  padding: 0 10px;
  position: relative;

  &__close {
    position: absolute;
    width: 8px;
    height: 8px;
    right: 10px;
    top: 8px;
    &:after{
      content: '&#x2715;';
    }
  }

  &--error:before {
    content: '';
    position: absolute;
    height: 1px;
    background: red;
    width: 100%;
    bottom: -1px;
    left: 0;
  }
}
